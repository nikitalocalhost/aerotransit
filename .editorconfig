[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ex,exs}]
indent_size = 2
indent_style = space

[*.{heex,leex,html}]
indent_size = 4
indent_style = tab

[*.{js,jsx,ts,tsx,json}]
indent_size = 4
indent_style = tab

[*.{css,scss,sass,pcss}]
indent_size = 4
indent_style = tab
